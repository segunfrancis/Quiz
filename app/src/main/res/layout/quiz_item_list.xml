<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/questionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionNumber"
        tools:text="Nunc egestas, augue at pellentesque laoreet, felis eros vehicula leo, at malesuada velit leo quis pede. Sed magna purus, fermentum eu, tincidunt eu, varius ut, felis. Pellentesque egestas, neque sit amet convallis pulvinar" />

    <RadioGroup
        android:id="@+id/options_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView">

        <RadioButton
            android:id="@+id/option1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Volutpat pretium libero. Cras sagittis." />

        <RadioButton
            android:id="@+id/option2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Vestibulum volutpat pretium libero. Aenean imperdiet." />

        <RadioButton
            android:id="@+id/option3Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cras sagittis." />

        <RadioButton
            android:id="@+id/option4Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Aenean imperdiet." />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>